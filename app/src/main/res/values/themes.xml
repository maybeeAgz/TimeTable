<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/plue</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="dividerColor">@color/black</item>
        <item name="android:listDivider">@color/grey</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="navigationViewStyle">@style/Widget.a.Navigation</item>
    </style>
    <style name="Widget.a.Navigation" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemBackground">@color/white</item>
        <item name="itemTextColor">@color/black</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="itemShapeFillColor">@color/navigation_item_color</item>
    </style>
    <style name="Widget.a.Text" parent="Widget.AppCompat.TextView">
        <item name="tint">@color/white</item>
    </style>

</resources>